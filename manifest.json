{
    "name": "Copy Link Extension",
    "version": "1.0",
    "description": "A simple extension to copy the current page URL to clipboard.",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting"], 
    "action": {
      "default_title": "Copy Link",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  